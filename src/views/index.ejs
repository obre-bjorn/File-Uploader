<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
</head>
    <body>
        
        <%- include('./partials/header.ejs') %>
        <br>
        <br>


        <h1>WELCOME BACK👨‍🦱: <%= user.username %></h1>
        
        <br>

        <form action="/folder/add-folder" method="post">
            <h2>Create Folder</h2>

            <label for="add-folder">Enter Folder Name</label>
            <input id="add-folder" name="name" type="text" required>

            <input type="submit" value="Create Folder">

        </form>



        <br>
        <form action="/upload-file" method="post" enctype="multipart/form-data">
            <h2>Upload your file here</h2>
        
            <input id="file" name="file" type="file" placeholder="Upload file" required>
            <input type="submit" value="Upload">
        </form>

        <br>

        <hr>
        <h1>Your Folders:</h1>
        <% if (folders.length > 0) { %>

            <% folders.forEach(function(folder) { %>
                <a href="/folder/<%= folder.id %>">
                    <h2> <%= folder.name %> </h2>
                </a>
                <a href="/folder/delete/<%= folder.id %>">
                    <button>Delete Folder</button>
                </a>
        <% }) %>

        <% } else { %>
            <h2>No folders created yet</h2>
        <% } %>

        <br>



    

           


    </body>
</html>