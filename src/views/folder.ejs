<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <%- include('./partials/header.ejs') %>
        <br>
        <br>

    <h2>Folder Name: <%= folder.name %></h2>

    <form action="/folder/<%= folder.id %>/upload-file" method="post" enctype="multipart/form-data">
        <h2>Upload your file here</h2>
        <input id="file" name="file" type="file" placeholder="Upload file" required>
        <input type="submit" value="Upload">
    </form>

    <hr>
    <% if (folder.files.length > 0) { %>

        <% folder.files.forEach(file => { %>
            <a href="/file/<%= file.id %>">
                <h2><%= file.url %></h2> <!-- Corrected to access the file URL -->
            </a>
        <% }) %>

    <% } else { %>

        <h2>No files in the folder</h2>

    <% } %>

    
</body>
</html>